{
    "version": 2,
    "builds": [
      {
        "src": "api/*.py",
        "use": "@vercel/python",
        "config": { "runtime": "python3.8" }
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/capture-dimensions", "dest": "/api/capture-dimensions.py" },
      { "src": "/api/process-dimensions", "dest": "/api/process-dimensions.py" },
      { "src": "/static/(.*)", "dest": "/public/static/$1" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ]
  }
  
