{
  "version": 2,
  "builds": [
      {
          "src": "api/FlaskApp.py",
          "use": "@vercel/python",
          "config": { "maxLambdaSize": "15mb" }
      },
      {
          "src": "public/**/*",
          "use": "@vercel/static"
      }
  ],
  "routes": [
      { "src": "/api/(.*)", "dest": "/api/FlaskApp.py" },
      { "src": "/static/(.*)", "dest": "/public/static/$1" },
      { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
